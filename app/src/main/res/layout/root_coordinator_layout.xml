<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivityRootView"
    style="@style/MatchMatch"
    android:background="@android:color/background_light"
    android:fitsSystemWindows="true"
    tools:context="com.igor.shaula.string_benchmark.app_components.main_screen.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        style="@style/MatchWrap"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolBar"
            style="@style/MatchMatch"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorBackgroundFloating"
            app:expandedTitleGravity="start|top"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <include layout="@layout/activity_main_content_preparation"/>

            <!--<ImageView-->
            <!--android:id="@+id/main.backdrop"-->
            <!--style="@style/MatchMatch"-->
            <!--android:fitsSystemWindows="true"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@android:drawable/btn_star"-->
            <!--app:layout_collapseMode="parallax"/>-->

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <!-- later delete this frame layout -->
    <FrameLayout
        android:id="@+id/flPrefsContainer"
        style="@style/MatchWrap"
        android:visibility="gone"/>

    <android.support.v4.widget.NestedScrollView
        style="@style/MatchMatch"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!--<LinearLayout-->
        <!--style="@style/MatchWrap"-->
        <!--android:orientation="vertical">-->

        <!--<include layout="@layout/activity_main_content_preparation"/>-->

        <include layout="@layout/activity_main_content_iterations"/>

        <!--</LinearLayout>-->

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>