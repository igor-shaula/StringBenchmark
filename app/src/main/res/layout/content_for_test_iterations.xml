<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vgIterations"
    style="@style/MatchMatch"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/tvIterationsExplanation"
        style="@style/MatchWrap"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="@string/iterationsExplanation"
        android:textColor="@android:color/black"
        android:textStyle="italic"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:background="@android:color/darker_gray"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilIterationsAmount"
        style="@style/MatchWrap">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiedIterationsAmount"
            style="@style/MatchWrap"
            android:gravity="center"
            android:hint="@string/iterationsAmountHintEmpty"
            android:imeOptions="actionDone|flagForceAscii|flagNoExtractUi|flagNoFullscreen"
            android:inputType="number"
            android:textColor="@color/colorPrimaryDark"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        style="@style/MatchWrap"
        android:gravity="center">

        <Button
            android:id="@+id/bToggleAdjustedIterations"
            style="@android:style/Widget.Button.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/startIterations"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"/>

        <!--<View-->
        <!--android:layout_width="16dp"-->
        <!--android:layout_height="0dp"/>-->

        <!--<Button-->
        <!--android:id="@+id/bToggleEndlessIterations"-->
        <!--style="@android:style/Widget.Button.Small"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:paddingEnd="16dp"-->
        <!--android:paddingStart="16dp"-->
        <!--android:text="@string/startEndlessIterations"-->
        <!--android:textAllCaps="false"-->
        <!--android:textColor="@color/colorPrimary"/>-->

        <CheckBox
            android:id="@+id/cbEndlessIterations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="@string/endless_iterations"
            android:textColor="@color/colorPrimary"
            android:theme="@style/AppThemeGreenAccent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvProgressBar"
        style="@style/MatchWrap"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tvLoadExplanation"
        style="@style/MatchWrap"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="@string/summaryLoadInfo"
        android:textColor="@android:color/black"/>

    <LinearLayout style="@style/MatchWrap">

        <TextView
            style="@style/WrapWrap"
            android:text="@string/current_iteration_is"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvCurrentIterationNumber"
            style="@style/WrapWrap"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvIterationsTotalNumber"
            style="@style/WrapWrap"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvIterationsResultHeader"
        style="@style/MatchWrap"
        android:layout_marginBottom="16dp"
        android:gravity="end"
        android:text="@string/resultsForLoggingTests"
        android:textStyle="italic"/>

    <TextView
        style="@style/WrapWrap"
        android:text="@string/resultOfSystemOutPrintln"/>

    <TextView
        android:id="@+id/tvResultForSystemOutPrintln"
        style="@style/MatchWrap.Gravity_End"
        android:text="@string/star"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        style="@style/WrapWrap"
        android:text="@string/resultOfStandardLog"/>

    <TextView
        android:id="@+id/tvResultForStandardLog"
        style="@style/MatchWrap.Gravity_End"
        android:text="@string/star"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        style="@style/WrapWrap"
        android:text="@string/resultOfDAL"/>

    <TextView
        android:id="@+id/tvResultForDAL"
        style="@style/MatchWrap.Gravity_End"
        android:text="@string/star"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        style="@style/WrapWrap"
        android:text="@string/resultOfVAL1"/>

    <TextView
        android:id="@+id/tvResultForVAL1"
        style="@style/MatchWrap.Gravity_End"
        android:text="@string/star"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        style="@style/WrapWrap"
        android:text="@string/resultOfVAL2"/>

    <TextView
        android:id="@+id/tvResultForVAL2"
        style="@style/MatchWrap.Gravity_End"
        android:text="@string/star"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        style="@style/WrapWrap"
        android:text="@string/resultOfVAL3"/>

    <TextView
        android:id="@+id/tvResultForVAL3"
        style="@style/MatchWrap.Gravity_End"
        android:text="@string/star"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        style="@style/WrapWrap"
        android:text="@string/resultOfSLVoid"/>

    <TextView
        android:id="@+id/tvResultForSLVoid"
        style="@style/MatchWrap.Gravity_End"
        android:text="@string/star"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        style="@style/WrapWrap"
        android:text="@string/resultOfSLInt"/>

    <TextView
        android:id="@+id/tvResultForSLInt"
        style="@style/MatchWrap.Gravity_End"
        android:text="@string/star"
        android:textColor="@color/colorPrimaryDark"/>

</LinearLayout>